<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title-Home</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MyAirport", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                
                @*
                    <div id="TitleContent" style="text-align: center">
                    <a href=@Html.RouteLink("Admin area", new { controller = "Home", action = "Index", area = "" },new { @class = "navbar-brand" })>
                    <img src="~/Content/Image/logo.png" style="width:50%" />
                    </a>
                    </div>
               *@
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Timetable", "Index", "TimetableView")</li>
                    <li>@Html.ActionLink("Flights", "Index", "FlightView")</li>
                    <li>Separator</li>
                    <li>@Html.ActionLink("Cashbox","Index", "CashBoxes")</li>
                    <li>@Html.ActionLink("Flight", "Index", "Flight")</li>
                    <li>@Html.ActionLink("BoardingCard", "Index", "BoardingCards")</li>
                    <li>@Html.ActionLink("Airplanes", "Index", "Airplanes")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ASP.NET MVC Airport</p>
        </footer>
    </div>
    <br />


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
